<div>
<div id="table-playlist">
  <table class="table">
    <% room.songs.where(past: false).order("poll DESC").each do |song| %>
      <tr>
        <td><img src="<%= song.thumbnail %>" class="playlist-thumbnail"</td>
        <td><%= song.name %></td>
        <td>
          <span style="cursor: pointer; display: inline-block;" onclick="doPlus('<%= song.id.to_s %>')">ğŸ‘</span>
          <%= song.poll %>
          <span style="cursor: pointer; display: inline-block;" onclick="doMinus('<%= song.id.to_s %>')">ğŸ‘</span>
        </td>
      </tr>
    <% end %>
    <script>
    emptyNewSongForm()
    sizeThumbnails()
    updatePlayedSong('<%= room.player_id.to_s %>')
    </script>
  </table>
</div>
<div id="table-history">
  <table class="table">
    <% room.songs.where(past: true).order("modified_at DESC").each do |song| %>
      <tr class='clickable-row' title='RÃ©Ã©couter' onClick="replay('<%= song.link %>', '<%= room.id.to_s %>')">
        <td><img src="<%= song.thumbnail %>" class="history-thumbnail"</td>
        <td><%= song.name %></td>
      </tr>
    <% end %>
    <script>
    emptyNewSongForm()
    sizeThumbnails()
